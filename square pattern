public class SquarePattern {

    public static void main(String[] args) {
        int n = 4; 
        for (int i = 1; i <= n; i++) {
            int number = i * i;
            for (int j = 1; j <= i; j++) {
                System.out.printf("%4d", number);
                number += (2 * j + 1); 
            }
            System.out.println();
        }
    }
}
